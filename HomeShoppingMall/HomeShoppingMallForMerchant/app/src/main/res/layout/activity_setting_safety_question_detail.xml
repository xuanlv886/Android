<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/zhezhao"
        android:padding="15dp"
        android:visibility="gone"
        android:translationZ="10dp"
        android:elevation="5dp"/>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/title"
            android:textColor="@color/black"
            android:text="@string/settingSafetyQuestion" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/submit"
            android:textColor="@color/black"
            android:textSize="@dimen/function_btn"
            android:padding="15dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grayline"
        android:layout_below="@+id/rl_title"/>

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/view"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question1"
            android:layout_centerVertical="true"/>
        <Spinner
            android:id="@+id/sp_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_one"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_one"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:hint="@string/yourAnswer"/>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_one"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question2"
            android:layout_centerVertical="true"/>
        <Spinner
            android:id="@+id/sp_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_two"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_two"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_two"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:hint="@string/yourAnswer"/>

    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_two"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question3"
            android:layout_centerVertical="true"/>
        <Spinner
            android:id="@+id/sp_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_three"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_three"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_three"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:hint="@string/yourAnswer"/>
</RelativeLayout>