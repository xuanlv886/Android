<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_item_pay_style_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/unselect"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/img_item_pay_style"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_toRightOf="@+id/img_item_pay_style_select"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/shurukuang"/>

    <TextView
        android:id="@+id/tv_item_pay_style_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:layout_toRightOf="@+id/img_item_pay_style"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>
