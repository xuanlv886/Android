<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/zhezhao"
        android:padding="15dp"
        android:visibility="gone"
        android:translationZ="10dp"
        android:elevation="5dp"/>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/title"
            android:textColor="@color/black"
            android:text="@string/safetyQuestionAuth" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/submit"
            android:textColor="@color/black"
            android:textSize="@dimen/function_btn"
            android:padding="15dp"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grayline"
        android:layout_below="@+id/rl_title"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/tv_question_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:layout_below="@+id/view"
        android:layout_margin="20dp"
        android:text="@string/question1"/>

    <EditText
        android:id="@+id/et_answer_first"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/yourAnswer"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:layout_below="@+id/tv_question_first"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_question_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:layout_below="@+id/et_answer_first"
        android:layout_margin="20dp"
        android:text="@string/question2"/>

    <EditText
        android:id="@+id/et_answer_second"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/yourAnswer"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:layout_below="@+id/tv_question_second"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_question_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:layout_below="@+id/et_answer_second"
        android:layout_margin="20dp"
        android:text="@string/question3"/>

    <EditText
        android:id="@+id/et_answer_third"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/yourAnswer"
        android:textColor="@color/black"
        android:textSize="@dimen/text"
        android:layout_below="@+id/tv_question_third"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>
