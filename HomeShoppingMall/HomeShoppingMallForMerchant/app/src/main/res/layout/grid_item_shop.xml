<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_item_product"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_item_product_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item_product"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/tv_item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_product_name"
        android:layout_below="@+id/tv_item_product_name"
        android:textColor="@color/orange"
        android:textSize="@dimen/function_btn" />

    <TextView
        android:id="@+id/tv_item_product_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_product_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_item_product_price"
        android:textColor="@color/graytext"
        android:textSize="@dimen/text" />
</RelativeLayout>
