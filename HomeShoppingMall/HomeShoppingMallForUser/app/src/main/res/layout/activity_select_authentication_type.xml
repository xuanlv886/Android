<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/title"
            android:textColor="@color/black"
            android:text="@string/selectAuthenticationType" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/next"
            android:textColor="@color/black"
            android:textSize="@dimen/function_btn"
            android:padding="15dp"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grayline"
        android:layout_below="@+id/rl_title"
        android:id="@+id/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_tel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_btn_gray"
            android:textColor="@color/black"
            android:textSize="@dimen/function_btn"
            android:text="@string/phoneAuth"/>

        <Button
            android:id="@+id/btn_safety_question"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_btn_gray"
            android:textColor="@color/black"
            android:textSize="@dimen/function_btn"
            android:layout_marginTop="80dp"
            android:text="@string/safetyQuestionAuth"/>
    </LinearLayout>

</RelativeLayout>
