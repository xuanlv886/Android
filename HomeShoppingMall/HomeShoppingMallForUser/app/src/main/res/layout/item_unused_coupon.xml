<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2" />

    <LinearLayout
        android:id="@+id/ll_unused"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_coupon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/bule">

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_coupon_content"
                android:layout_marginBottom="8dp"
                android:layout_toLeftOf="@+id/tv_coupon_money"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_coupon_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_coupon_content"
                android:layout_centerHorizontal="true"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_coupon_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:text="满90元可用"
                android:textColor="@color/white"
                android:textSize="@dimen/thirteen" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_unused_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="全品类（特例商品除外）"
                android:textSize="@dimen/text" />

            <TextView
                android:id="@+id/tv_unused_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_unused_type"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="2018.03.09 - 2018.03.15"
                android:textColor="#666666"
                android:textSize="@dimen/thirteen" />

            <TextView

                android:id="@+id/tv_unused_abort_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_unused_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="2018.03.09 - 2018.03.15"
                android:textColor="#666666"
                android:textSize="@dimen/thirteen" />

            <TextView

                android:id="@+id/tv_unused_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_unused_abort_time"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_text_blue_bg"
                android:text="立即使用"
                android:textColor="#666666"
                android:textSize="@dimen/small_text"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>