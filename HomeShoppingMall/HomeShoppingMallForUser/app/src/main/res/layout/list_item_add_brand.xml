<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_iv_shop_pic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@mipmap/sp" />


    <TextView
        android:id="@+id/item_tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/item_iv_shop_pic"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:text="名字"
        android:textColor="#666666"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_money_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_tv_shop_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_iv_shop_pic"
        android:text="200"
        android:textColor="#999999"
        android:textSize="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/item_tv_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_tv_shop_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_money_ago"
        android:text="126"
        android:textColor="@color/orange"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/item_tv_shop_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money_ago"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_iv_shop_pic"
        android:ellipsize="end"
        android:maxEms="13"
        android:singleLine="true"
        android:text="描述............"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_tv_shop_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_money_ago"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_tuijian_bg"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="@color/blue"
        android:textSize="11sp" />
</RelativeLayout>