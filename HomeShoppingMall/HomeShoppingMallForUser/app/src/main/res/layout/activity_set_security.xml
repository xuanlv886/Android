<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/zhezhao"
        android:padding="15dp"
        android:visibility="gone"
        android:translationZ="10dp"
        android:elevation="5dp"/>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back"
            android:text="@string/security"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/rl_title"
        android:background="@color/grayline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <LinearLayout
                android:id="@+id/ll_problem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="问题1:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/function_btn" />

                <TextView
                    android:id="@+id/tv_problem1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/line_btn_gray"
                    android:drawableRight="@mipmap/icon_right"
                    android:paddingRight="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_answer1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/ll_problem1"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/line_btn_gray"
                android:paddingRight="15dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <LinearLayout
                android:id="@+id/ll_problem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="问题2:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/function_btn" />

                <TextView
                    android:id="@+id/tv_problem2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/line_btn_gray"
                    android:drawableRight="@mipmap/icon_right"
                    android:paddingRight="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_answer2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/ll_problem2"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/line_btn_gray"
                android:paddingRight="15dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <LinearLayout
                android:id="@+id/ll_problem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="问题3:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/function_btn" />

                <TextView
                    android:id="@+id/tv_problem3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/line_btn_gray"
                    android:drawableRight="@mipmap/icon_right"
                    android:paddingRight="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_answer3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/ll_problem3"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/line_btn_gray"
                android:paddingRight="15dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text" />
        </RelativeLayout>

        <Button
            android:id="@+id/set_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_btn_blue"
            android:elevation="5dp"
            android:enabled="true"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text"
            android:translationZ="10dp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>